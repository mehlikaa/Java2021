package Dec12_proje_kitapci;

import java.util.Scanner;

public class Kitaplik {
	
	static Scanner scan = new Scanner(System.in);
	static int secim=0;

	public static void main(String[] args) {
		
		System.out.println("\n======Kitapligimiza Hosgeldiniz======");

		menu();
		

	}

private static void menu() {
	System.out.println(
			"\t  \nHangi islemi yapmak istersiniz?" + "\n------------------------------------"
					+ " \n1-Kitap ekle\n" + "2-Numara ile kitap goruntule\n" + "3-Bilgi ile kitap goruntule\n"
					+ "4-Numara ile kitap sil\n" + "5-Tum kitaplari listele\n" + "6-Cikis\n=>Seciminiz :");
	
	secim = scan.nextInt();
	switch (secim) {
	case 1:
	
		kitapEkle();
		menu();
		break;
		
	case 2:
		//numaraIleKitap();
		break;
		
	case 3:
		//bilgiIleKitapSorgula();
		break;
		
	case 4:
		//numaraIleKitapSil();
	break;
	
	case 5:
		tumKitaplariListele();
	break;
	default:
		break;
	}
		
	}

private static void kitapEkle() {
	System.out.print("Girmek istediginiz Kitabin adini giriniz :");
	String yeniKitap=scan.next();
	
	Kitap kitapEkle=new Kitap();
	kitapEkle.getKitaplar().add(yeniKitap);
	kitapEkle.getKitapNo().add(kitapEkle.getKitapNo().size()+1);
	// System.out.println("Yeni Kitabim : "+ kitapEkle.kitaplar
	
}

private static void tumKitaplariListele() {
	Kitap kitap = new Kitap();
	System.out.println("  Sira No         Kitap Adi     \n========================");
	for (int i = 0; i < kitap.getKitaplar().size(); i++) {
		System.out.println("\t" + kitap.getKitapNo().get(i) + "\t | \t" + kitap.getKitaplar().get(i));
	}
	
}

}
