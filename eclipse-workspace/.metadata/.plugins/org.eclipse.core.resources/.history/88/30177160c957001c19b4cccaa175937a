package Dec12_proje_kitapci;

import java.util.Scanner;

public class Kitaplik {

	public static void main(String[] args) {
		
		Scanner scan=new Scanner(System.in);
		System.out.println("======Kitapligimiza Hosgeldiniz======");
		System.out.println("  Sira No         Kitap Adi     \n========================");
		
		Kitap kitap=new Kitap();
		for (int i = 0; i < kitap.kitapNo.size(); i++) {
			System.out.println("\t"+ kitap.kitapNo.get(i)+ "\t\\|\t"+kitap.sNo.get(i));
		}
		
	}

}
