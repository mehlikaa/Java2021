package HB12_Varargs;

import java.util.Scanner;

public class Q01_ {

	public static void main(String[] args) {
		//  verilen Stringleri birlestiren concat isimli bir method olusturunuz
		// input : "m", "e", "r", "v", "e";
		// output : merve

		Scanner scan=new Scanner(System.in);
		
		
		System.out.print ("Harfi girip entera basiniz : \n (cikmak icin q'ya basiniz.));
		if(bas=='q'||bas=='Q') {
			break;
			}else if (bas==[a-z]||bas==[A-Z]) {
				concat+=scan.next();
			} else {
				System.out.println("Bir harf giriniz lutfen");
			}
				
				// concat("m","e","r","v","e");
		
	}

	private static void concat(String... isim) {
		
		String concat="";
		
		for(String i: isim) {
			concat+=i;
		}
		System.out.println(concat);
	}

	}

}
