package day31_dateAndTime;

import java.time.LocalTime;

public class C02_sayac {

	public static void main(String[] args) {
		int i=0;
		if (i==0) {
		LocalTime saat2=LocalTime.now();
		System.out.println( "Bitis saati : "+ saat2);
		i=0; 
		
		}
		
		for(i=0;i>0;i++) {
			LocalTime saat2=LocalTime.now();
			System.out.println( "Bitis saati : "+ saat2);
			i=0; 
		}
	}

}
